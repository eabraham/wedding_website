    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/notify/0.4.0/notify.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/notify/0.4.0/styles/metro/notify-metro.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/notify/0.4.0/styles/metro/notify-metro.min.css"/>

