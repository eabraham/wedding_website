    <!-- end -->


    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body class="<%= @is_welcome ? 'welcome-page' : '' %>">
    <%= render "nav" %>
    <% if notice.present? %>
      <script>$.notify("<%= notice %>",{ className: 'success', position: 'top left', arrowSize: 10, autoHideDelay: 5000});</script>
      <!--<div class="alert-box"><%= notice %></div>-->
    <% end %>
    <% if alert.present? %>
      <script>$.notify("<%= alert %>",{ className: 'error', position: 'top left', arrowSize: 10, autoHideDelay: 5000});</script>
      <!--<div class="alert-box alert"><%= alert %></div>-->
    <% end %>
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
