          <a href="#" data-reveal-id="myModal" class="oswald alert button" data-step="1" data-intro="Thanks for visiting. Please RSVP first." onclick="javascript:introJs().exit();">RSVP</a>
          <%= link_to 'Login', :sign_in, class: "oswald alert button" %>
        <% else %>
        <li class="">
