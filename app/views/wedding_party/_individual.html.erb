<% if index.even? || index.zero? %>
<div class="small-2 medium-2 large-2 columns">
  <%= image_tag individual.images.first.photo.url(:thumb), class: 'big_day_photo' if individual.images.any? %>
</div>
<div class="small-10 medium-10 large-10 columns">
  <span class="bold"><%= "#{individual.name} - #{individual.title}" %></span><br>
  <span><%= individual.bio %></span>
</div>
<% else %>
<div class="small-10 medium-10 large-10 columns">
  <span class="bold"><%= "#{individual.name} - #{individual.title}" %></span><br>
  <span><%= individual.bio %></span>
</div>
<div class="small-2 medium-2 large-2 columns">
  <%= image_tag individual.images.first.photo.url(:thumb), class: 'big_day_photo' if individual.images.any? %>
</div>
<% end %>
