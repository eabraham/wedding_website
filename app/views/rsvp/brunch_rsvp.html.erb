<div class="row">
  <div class="small-12 large-12 columns"> 
    <p>

    </p>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <%= form_tag(:rsvp_brunch_submit, method: "post", data:{ abide: '' }) do %>
      <input name="invite_code" type="hidden" value="<%= @token %>">
      <div class="row">
        <div class="small-12 large-12 columns">
          <p>
            On Sunday May 29th there will be a boat brunch that departs near the hotel.  After completing the RSVP, details for the brunch can be found on the Big Day page of this site.
          </p>
        </div>
      </div>
      <div class="row rsvp-field">
        <div class="small-6 large-6 columns"><h4>Name</h4></div>
        <div class="small-4 large-4 columns"><h4>Sunday Brunch</h4></div>
      </div>
      <% @users.each do |user| %>
      <div class="row">
        <div class="small-6 large-6 columns rsvp-field"><h4><%= user.full_name %></h4></div>
        <div class="small-4 large-4 columns rsvp-field">
          <select id="user-<%= user.id %>-brunch-field" name="user-<%= user.id %>-brunch" <%= user.rsvp ? '' : 'disabled' %>>
            <option value="0" selected>Declines with Regret</option>
            <option value="1">Accepts with Pleasure</option>
          </select>
        </div>
      </div>
      <% end %>
      <button type="submit">Submit</button>
    <% end %>
  </div>
</div>