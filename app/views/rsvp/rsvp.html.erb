<div class="row">
  <div class="small-12 large-12 columns"> 
  Add welcome text
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns">
    <form data-abide>
      <div class="row">
        <div class="small-12 large-12 columns">
          Please select all guests who can attend our special day:
        </div>
      </div>
      <div class="row rsvp-field switch round large">
        <div class="small-8 large-4 columns" style="height:46px;"><%= @user.full_name %></div>
        <div class="small-4 large-8 columns">
          <input id="user-<%= @user.id %>-rsvp-field" type="checkbox" name="rsvp">
          <label for="user-<%= @user.id %>-rsvp-field"></label>
        </div>
      </div>
      <div class="row password-field">
        <div class="small-12 large-12 columns">
          <label>Password <small>required</small>
            <input type="password"  id="password" name="password" required pattern="[a-zA-Z]+">
          </label>
          <small class="error">Passwords must be at least 8 characters with 1 capital letter, 1 number, and one special character.</small>
        </div>
      </div>
      <div class="row password-confirmation-field">
        <div class="small-12 large-12 columns">
          <label>Confirm Password <small>required</small>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
          </label>
          <small class="error">Passwords must match.</small>
        </div>
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>